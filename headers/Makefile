CC = gcc
CFLAGS = -c -Wall -Wextra -Werror
NAME = getNextLine
RM = rm -rf
HDRS = /headers/get_next_line.h

################################################################################
##								MANDATORY									  ##
################################################################################
CFILES = \
		get_next_line.c\
		get_next_line_utils.c 
#- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - #
OBJS = $(CFILES:.c=.o)
################################################################################
.PHONY: all re fclean clean
################################################################################

all:		$(NAME)

$(NAME):	$(OBJS)
			@$(CC) $(OBJS) -o $(NAME)
			
.c.o:
		 	${CC} ${CFLAGS}  $^ -o $@ -I ${HDRS}

re:     	fclean all

fclean:     clean
			@$(RM) $(NAME)

clean:		
			@$(RM) $(OBJS)

